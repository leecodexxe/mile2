generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gamedata {
  session_id    Int      @id(map: "gamedata_pk") @default(autoincrement())
  user_id       String   @db.Uuid
  casino        String   @db.VarChar
  machine       String   @db.VarChar
  session_start DateTime @db.Timestamp(6)
  session_stop  DateTime @db.Timestamp(6)
  game_type     String   @db.VarChar
  game          String   @db.VarChar
  wageramt      Decimal  @db.Money
  wagernum      Int?
  win           Decimal? @db.Money
  loss          Decimal? @db.Money
  notes         String?
  User          User?    @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: Cascade, map: "gamedata_fk")
}

model User {
  user_id    String       @id(map: "user_pk") @default(uuid()) @db.Uuid
  email      String       @unique @db.VarChar
  token_id   String       @db.VarChar @unique
  gamedata   Gamedata[]

}
